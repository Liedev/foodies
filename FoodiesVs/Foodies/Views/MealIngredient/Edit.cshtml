@model Foodies.ViewModels.MealIngredientViewModel

@{
    ViewData["Title"] = "Edit";
}

<div id="headerMain" class="py-5 bg-image-full">
    <h1 class="text-center">Edit Meal Ingrediënt</h1>
    <p class="text-center"><strong>Happy Editing</strong></p>
</div>
<div class="row mt-5">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MealIngredient.MealIngredientId" />
            <input type="hidden" asp-for="MealIngredient.MealId" />
            <div class="form-group">
                <label asp-for="MealIngredient.IngredientId" class="control-label"></label>
                <select asp-for="MealIngredient.IngredientId" class="form-control" asp-items="Model.Ingredients"></select>
                <span asp-validation-for="MealIngredient.IngredientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealIngredient.Amount" class="control-label"></label>
                <input asp-for="MealIngredient.Amount" class="form-control" />
                <span asp-validation-for="MealIngredient.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealIngredient.UnitId" class="control-label"></label>
                <select asp-for="MealIngredient.UnitId" class="form-control" asp-items="Model.Units"></select>
                <span asp-validation-for="MealIngredient.UnitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Create" asp-route-id="@Model.MealIngredient.MealId" class="btn btn-primary">Back to Meal</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
