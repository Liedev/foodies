@model Foodies.ViewModels.IndexIngredientViewModel

@{
    ViewData["Title"] = "Index";
}

<div id="headerMain" class="py-5 bg-image-full">
    <h1 class="text-center">Ingredients</h1>
</div>
<div class="card mt-5">
    <form asp-controller="Ingredient" asp-action="Search" method="get" class="mt-4 ml-2">
        <div class="form-actions no-color">
            <p>
                <a asp-action="Create" class="btn btn-primary">Create New Ingredient</a>
                Search a category:
                <input asp-for="IngredientSearch" />
                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-controller="Ingredient" asp-action="Index" class="btn btn-primary">Full List</a>
            </p>
        </div>
    </form>
    <table class="table mt-2">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].EnergyKcal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].EnergyKj)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].Water)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].EggWhite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].Carbohydrates)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].Sugar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].Fat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].SaturatedFat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].SingleSaturatedFat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].MultiSaturatedFat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].Cholesterol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingredients[0].Fiber)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Ingredients)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnergyKcal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnergyKj)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Water)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EggWhite)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carbohydrates)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sugar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SaturatedFat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SingleSaturatedFat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MultiSaturatedFat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cholesterol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fiber)
                    </td>
                    <td class="text-right">
                        <a asp-action="Edit" asp-route-id="@item.IngredientId" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.IngredientId" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
