
@model Foodies.ViewModels.RecipeViewModel

<div id="headerMain" class="py-5 bg-image-full">
    <h1 class="text-center">Recipe</h1>
    <p class="text-center"><strong>Fill my belly</strong></p>
</div>
<div class="receipe-content-area">
    <div class="row">
        <div class="col-12 col-md-12 col-ms-12">
            <div class="receipe-headline my-5">
                <div class="h1">@Model.Meal.Name</div>
                <div class="recipe-duration">
                    <div class="row mt-3">
                        <img src="~/assets/@Model.Meal.PictureMeal" asp-append-version="true" alt="@Model.Meal.Name" class="card-img-top col-sm-4" height="400" />
                        <div class="col-sm-6 card">
                            <div class="single-preparation-step d-flex">
                                <p>@Model.Meal.PreperationDiscribtion</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3 h-100">
                <div>
                    <div class="h6">Prep: @Model.Meal.PreperationTime.RangeMinutes</div>
                    <div class="h6">Level: @Model.Meal.LevelPreperation.Level </div>
                    <div class="h6">Yields: @Model.Meal.NumberOfPeople Servings</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Ingredients -->        
        <div>
            <div class="ingredients card mt-2 col-12">
                <div class="h4 mt-4 ml-2">Ingredients</div>
                <ul>
                    @foreach (MealIngredient mealIngredient in Model.MealIngredients)
                    {
                        <li>
                            @Html.DisplayFor(mi => mealIngredient.Ingredient.Name)
                            @Html.DisplayFor(mi => mealIngredient.Amount)
                            @Html.DisplayFor(mi => mealIngredient.Unit.Name)
                        </li>

                    }
                </ul>
            </div>
        </div>
    </div>
</div>